<div class="container">
  <h2>Events nearby:</h2>
  <div class="cards cards-events">
    <% @events.each do |event| %>
      <div class="card-event">
        <h4><%= event.name %></h4>
        <p><strong><%= event.start_time.to_s(:stamp) %></strong> | <em><%= event.location.address %></em></p>
        <p><%= event.description %></p>
        <p><%= event.price %>$</p>
      </div>
    <% end %>
  </div>
</div>
