<div class="container">
  <h2>Events nearby:</h2>
  <div class="cards cards-events">
    <% @events.each do |event| %>
      <div class="card-event">
        <%= image_tag "https://images.unsplash.com/photo-1517457373958-b7bdd4587205?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80", class: "card-event-img" %>
        <h4><%= event.name %></h4>
        <p><strong><%= event.start_time %></strong> | <em><%= event.location.address %></em></p>
        <p><%= event.description %></p>
        <p><%= event.price %>$</p>
        <% if params[:user].present? %>
          <%= link_to "See more", event_path(event, user: @user), class:"btn btn-primary" %>
        <% else %>
          <%= link_to "See more", event_path(event), class:"btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
